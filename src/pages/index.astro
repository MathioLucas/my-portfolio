---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet">

<style is:global>
/* ——— PALETTE ——— */
:root { --gold:#c19e57; --ink:#3c2f13; --parch:#f4efe9; }

body {@apply bg-[var(--parch)] text-slate-800;}
h1,h2,h3 {font-family:"Playfair Display",serif; letter-spacing:-.01em;}

/* ——— HEADER ——— */
.logo   {font-family:"Playfair Display",serif; font-weight:700;}
.nav-link{
  @apply relative text-sm font-medium text-[var(--ink)] transition;
}
.nav-link::after{
  content:""; position:absolute; left:0; bottom:-2px;
  width:0; height:2px; background:var(--gold); transition:width .3s;
}
.nav-link:hover::after{width:100%;}

/* ——— BACKGROUND PAINTING & PARALLAX ——— */
.painting-bg{
  background:url("/images/claude1.jpg")
             center/cover no-repeat;
  opacity:.14;                     /* keep text readable */
  filter:grayscale(.35) blur(1px);
  position:absolute; inset:0; z-index:-2;

  /* slow Ken-Burns pan / zoom */
  animation:bgDrift 55s ease-in-out infinite alternate;
  will-change:transform;
}
@keyframes bgDrift{
  0%   {transform:scale(1.05) translate(0%, 0%);}
  50%  {transform:scale(1.12) translate(-3%, -4%);}
  100% {transform:scale(1.05) translate(2%, 3%);}
}

/* ——— SPARKLES OVERLAY ——— */
.sparkles{
  pointer-events:none; position:absolute; inset:0; z-index:-1;
  background:
    radial-gradient(circle at 20% 30%, rgba(255,223,130,.35) 0 2px, transparent 3px),
    radial-gradient(circle at 70% 70%, rgba(255,223,130,.25) 0 1.5px, transparent 3px),
    radial-gradient(circle at 40% 80%, rgba(255,223,130,.28) 0 1.8px, transparent 3px);
  background-size:3px 3px,4px 4px,5px 5px;
  animation:sparkleShift 12s linear infinite;
}
@keyframes sparkleShift{
  from{background-position:0 0,0 0,0 0;}
  to  {background-position:1000px 600px, -800px 400px, 600px -600px;}
}

/* ——— HERO ——— */
.hero-section{@apply relative min-h-screen flex flex-col items-center justify-center text-center px-6;}
.hero-title{
  @apply text-5xl md:text-7xl font-black mb-6;
  color:transparent;background:linear-gradient(90deg,var(--ink),var(--gold));-webkit-background-clip:text;background-clip:text;
  animation:shine 6s ease-in-out infinite alternate;
}
@keyframes shine{
  from{background-position:0% 50%;}
  to  {background-position:100% 50%;}
}
.hero-sub{@apply text-xl md:text-2xl max-w-2xl mx-auto mb-14 text-[#5d4c2a];}

/* ——— BUTTONS ——— */
.btn{@apply inline-block px-8 py-3 rounded-full font-semibold transition shadow-md cursor-pointer;}
.btn-primary{@apply bg-[var(--gold)] text-white hover:bg-[#d4b36e];}
.btn-outline{@apply border border-[var(--gold)] text-[var(--gold)] hover:bg-[var(--gold)] hover:text-white;}

/* ——— CARDS ——— */
.card{
  @apply bg-white/70 backdrop-blur-sm border border-[#d9d1c4] rounded-xl p-6 md:p-8 shadow-lg transition-transform duration-300;
}
.card:hover{transform:translateY(-6px) rotateX(3deg) rotateY(-2deg);}
.card h3{@apply font-semibold text-lg mb-2;}

/* ——— DIVIDER ——— */
.divider{
  background:url('data:image/svg+xml;utf8,\
  <svg xmlns="http://www.w3.org/2000/svg" width="300" height="20" viewBox="0 0 300 20" fill="none" stroke="%23c19e57" stroke-width="2"><path d="M1 10H99M201 10H299"/><circle cx="150" cy="10" r="4" fill="%23c19e57"/><path d="M120 10c5-9 55-9 60 0"/></svg>')
  center/contain no-repeat; width:100%; height:20px; margin:3rem auto;
}
</style>

<BaseLayout>
  <!-- HEADER -->
  <header class="w-full px-6 py-4 flex justify-between items-center">
    <span class="logo text-2xl text-[var(--ink)]">Mathio&nbsp;Luca</span>
    <nav class="flex gap-6">
      <a class="nav-link" href="/projects">Projects</a>
      <a class="nav-link" href="/contact">Contact</a>
      <a class="nav-link" href="/resume.pdf" target="_blank">Résumé</a>
    </nav>
  </header>

  <!-- HERO -->
  <section class="hero-section">
    <div class="painting-bg"></div>
    <div class="sparkles"></div>

    <h1 class="hero-title">Building Reliable&nbsp;Systems</h1>
    <p class="hero-sub">
      Software engineer focused on scalable back-end architecture, clean code, and data-driven products.
    </p>

    <div class="flex gap-6">
      <a href="/projects" class="btn btn-primary">View Projects</a>
      <a href="/contact"  class="btn btn-outline">Get in Touch</a>
    </div>
  </section>

  <!-- STACK -->
  <section id="stack" class="py-24 px-6 max-w-6xl mx-auto">
    <div class="divider"></div>
    <h2 class="text-3xl md:text-4xl font-bold text-center text-[var(--ink)] mb-14">
      Areas&nbsp;of&nbsp;Expertise
    </h2>

    <div class="grid gap-10 md:gap-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <div class="card"><h3>Languages</h3><p>TypeScript, Go, Python, C++17.</p></div>
      <div class="card"><h3>Back-End</h3><p>Event-driven micro-services, gRPC, REST APIs, PostgreSQL, Redis.</p></div>
      <div class="card"><h3>Cloud</h3><p>AWS Lambda &amp; ECS, Docker, Terraform, Vercel.</p></div>
      <div class="card"><h3>Data &amp; AI</h3><p>Vector DBs, OpenAI API, data pipelines.</p></div>
      <div class="card"><h3>Quality</h3><p>TDD, property-based testing, Playwright, CI/CD.</p></div>
      <div class="card"><h3>Collaboration</h3><p>Agile practices, clear docs, mentoring.</p></div>
    </div>
  </section>

  <footer class="py-10 text-center text-sm text-[#5d4c2a]">
    © {new Date().getFullYear()} Mathio&nbsp;Luca
  </footer>

  <!-- PARALLAX SCRIPT -->
  <script is:inline>
    const bg = document.querySelector('.painting-bg');
    let rect;
    window.addEventListener('resize', ()=>{rect = bg.getBoundingClientRect();});
    window.addEventListener('mousemove', (e)=>{
      rect = rect||bg.getBoundingClientRect();
      const x = (e.clientX-rect.width/2)/rect.width;
      const y = (e.clientY-rect.height/2)/rect.height;
      bg.style.transform = `translate(${x*30}px,${y*30}px) scale(1.05)`;
    });
  </script>
</BaseLayout>
