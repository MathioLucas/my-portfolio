  <!-- GLOBAL STYLES -->
  <style>
    /* —— PALETTE —— */
    :root{
      --gold:#c19e57;
      --ink:#3c2f13;
      --parch:#f4efe9;
      --shadow:0 15px 35px -10px rgba(60,47,19,.25);
      --tech-primary: #00d4ff;
      --tech-secondary: #ff6b6b;
      --tech-accent: #4ecdc4;
      --tech-dark: #0a0a0a;
      --tech-light: #1a1a1a;
    }
    
    /* —— BASE —— */
    *,*:before,*:after{box-sizing:border-box;}
    html{scroll-behavior:smooth;}
    body{ 
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%); 
    color: #ffffff; 
    font-family: 'JetBrains Mono', monospace; 
    -webkit-font-smootng: antialiased;
    -moz-osx-font-smootng: grayscale;
    overflow-x: dden; 
}
    h1,h2,h3{font-family:"Playfair Display",serif;letter-spacing:-.01em;}
    
    /* —— ANIMATED BACKGROUND —— */
    .tech-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: -1;
      overflow: dden;
    }
    
    .grid-lines {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        linear-gradient(rgba(0, 212, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 212, 255, 0.1) 1px, transparent 1px);
      background-size: 50px 50px;
      animation: gridMove 20s linear infinite;
    }
    
    @keyframes gridMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }
    
    .floating-shapes {
      position: absolute;
      width: 100%;
      height: 100%;
    }
    
    .shape {
      position: absolute;
      border: 1px solid;
      border-radius: 50%;
      animation: float 15s ease-in-out infinite;
    }
    
    .shape:nth-cld(1) {
      width: 60px;
      height: 60px;
      top: 20%;
      left: 10%;
      border-color: var(--tech-primary);
      animation-delay: 0s;
      animation-duration: 12s;
    }
    
    .shape:nth-cld(2) {
      width: 40px;
      height: 40px;
      top: 60%;
      left: 80%;
      border-color: var(--tech-secondary);
      animation-delay: -3s;
      animation-duration: 18s;
    }
    
    .shape:nth-cld(3) {
      width: 80px;
      height: 80px;
      top: 80%;
      left: 20%;
      border-color: var(--tech-accent);
      animation-delay: -6s;
      animation-duration: 15s;
    }
    
    .shape:nth-cld(4) {
      width: 30px;
      height: 30px;
      top: 30%;
      left: 70%;
      border-color: var(--gold);
      animation-delay: -9s;
      animation-duration: 20s;
    }
    
    @keyframes float {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) rotate(0deg);
        opacity: 0.3;
      }
      25% { 
        transform: translateY(-50px) translateX(30px) rotate(90deg);
        opacity: 0.7;
      }
      50% { 
        transform: translateY(-20px) translateX(-20px) rotate(180deg);
        opacity: 0.5;
      }
      75% { 
        transform: translateY(30px) translateX(-40px) rotate(270deg);
        opacity: 0.8;
      }
    }
    
    .particles {
      position: absolute;
      width: 100%;
      height: 100%;
    }
    
    .particle {
      position: absolute;
      width: 2px;
      height: 2px;
      background: var(--tech-primary);
      border-radius: 50%;
      animation: particleFloat 25s linear infinite;
    }
    
    @keyframes particleFloat {
      0% {
        transform: translateY(100vh) translateX(0);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      90% {
        opacity: 1;
      }
      100% {
        transform: translateY(-100px) translateX(100px);
        opacity: 0;
      }
    }
    
    /* Generate particles */
    .particle:nth-cld(1) { left: 10%; animation-delay: 0s; }
    .particle:nth-cld(2) { left: 20%; animation-delay: -5s; background: var(--tech-secondary); }
    .particle:nth-cld(3) { left: 30%; animation-delay: -10s; }
    .particle:nth-cld(4) { left: 40%; animation-delay: -15s; background: var(--tech-accent); }
    .particle:nth-cld(5) { left: 50%; animation-delay: -20s; }
    .particle:nth-cld(6) { left: 60%; animation-delay: -2s; background: var(--gold); }
    .particle:nth-cld(7) { left: 70%; animation-delay: -7s; }
    .particle:nth-cld(8) { left: 80%; animation-delay: -12s; background: var(--tech-secondary); }
    .particle:nth-cld(9) { left: 90%; animation-delay: -17s; }
    
    /* —— HEADER —— */
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 50;
      backdrop-filter: blur(15px);
      background: rgba(10, 10, 10, 0.85);
      border-bottom: 1px solid rgba(0, 212, 255, 0.2);
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px rgba(0, 212, 255, 0.08);
    }
    
    header:hover {
      background: rgba(10, 10, 10, 0.95);
      box-shadow: 0 8px 30px rgba(0, 212, 255, 0.12);
    }
    
    .logo{
      font-family:"Playfair Display",serif;
      font-weight:700;
      color: var(--tech-primary);
      transition: all 0.3s ease;
      text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
    }
    
    .logo:hover {
      color: var(--gold);
      text-shadow: 0 0 20px rgba(193, 158, 87, 0.8);
      transform: scale(1.05);
    }
    
    .nav-link{
      position: relative;
      font-size: 0.875rem;
      font-weight: 500;
      color: #ffffff;
      transition: color 0.3s ease;
      text-decoration: none;
    }
    
    .nav-link::after{
      content:"";
      position:absolute;
      left:0;
      bottom:-2px;
      width:0;
      height:2px;
      background:var(--tech-primary);
      transition:width .35s cubic-bezier(.4,0,.2,1);
      box-shadow: 0 0 10px var(--tech-primary);
    }
    
    .nav-link:hover{
      color: var(--tech-primary);
      text-shadow: 0 0 8px rgba(0, 212, 255, 0.6);
    }
    
    .nav-link:hover::after{
      width:100%;
    }
    
    .nav-link.active {
      color: var(--tech-primary);
      font-weight: 600;
      text-shadow: 0 0 8px rgba(0, 212, 255, 0.6);
    }
    
    /* —— HERO —— */
    .hero-section{
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 5rem 1.5rem 0;
      overflow: dden;
    }
    
    .hero-section::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 30% 20%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
                  radial-gradient(circle at 70% 80%, rgba(255, 107, 107, 0.1) 0%, transparent 50%);
      z-index: 1;
      pointer-events: none;
    }
    
    .hero-section > * {
      position: relative;
      z-index: 2;
    }
    
    .hero-title{
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 1.5rem;
      color: transparent;
      background: linear-gradient(135deg, var(--tech-primary) 0%, var(--tech-secondary) 45%, var(--gold) 100%);
      background-size: 200% 200%;
      -webkit-background-clip: text;
      background-clip: text;
      animation: sne 8s ease-in-out infinite alternate, float 6s ease-in-out infinite;
      text-shadow: 0 0 30px rgba(0, 212, 255, 0.3);
      letter-spacing: -0.02em;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    @media (min-width: 768px) {
      .hero-title {
        font-size: 4.5rem;
      }
    }
    
    @keyframes sne{
      from{background-position:0% 50%;}
      to{background-position:100% 50%;}
    }
    
    .hero-sub{
      font-size: 1.25rem;
      max-width: 32rem;
      margin: 0 auto 4rem;
      color: #cccccc;
      line-height: 1.6;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
      animation: fadeInUp 1s ease-out 0.5s both;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @media (min-width: 768px) {
      .hero-sub {
        font-size: 1.5rem;
      }
    }
    
    /* —— Scroll chevron —— */
    .chevron{
      width: 36px;
      height: 36px;
      border-left: 3px solid var(--tech-primary);
      border-bottom: 3px solid var(--tech-primary);
      transform: rotate(-45deg);
      margin: 2rem auto 4rem;
      animation: bounce 2.8s infinite, pulse 3s ease-in-out infinite alternate;
      opacity: 0.8;
      transition: all 0.3s ease;
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
    }
    
    .chevron:hover {
      opacity: 1;
      transform: rotate(-45deg) scale(1.2);
      box-shadow: 0 0 25px rgba(0, 212, 255, 0.8);
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 1; }
    }
    
    @keyframes bounce{
      0%,20%,50%,80%,100%{transform:translateY(0) rotate(-45deg);}
      40%{transform:translateY(8px) rotate(-45deg);}
      60%{transform:translateY(4px) rotate(-45deg);}
    }
    
    /* —— BUTTONS —— */
    .btn{
      display: inline-block;
      padding: 1rem 2.5rem;
      border-radius: 9999px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      text-decoration: none;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      letter-spacing: 0.025em;
      border: 2px solid;
    }
    
    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.6s ease;
      z-index: 1;
    }
    
    .btn:hover::before {
      left: 100%;
    }
    
    .btn > * {
      position: relative;
      z-index: 2;
    }
    
    .btn-primary{
      background: linear-gradient(135deg, var(--tech-primary) 0%, var(--tech-accent) 100%);
      color: white;
      border-color: var(--tech-primary);
      box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
    }
    
    .btn-primary:hover{
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
      background: linear-gradient(135deg, var(--tech-accent) 0%, var(--tech-primary) 100%);
    }
    
    .btn-outline{
      border-color: var(--tech-secondary);
      color: var(--tech-secondary);
      background: rgba(255, 107, 107, 0.1);
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px rgba(255, 107, 107, 0.2);
    }
    
    .btn-outline:hover{
      background: var(--tech-secondary);
      color: white;
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 10px 30px rgba(255, 107, 107, 0.4);
    }
    
    .hero-buttons {
      animation: fadeInUp 1s ease-out 0.8s both;
    }
    
    /* —— REVEAL ANIMATIONS —— */
    .reveal{
      opacity:0;
      transform:translateY(40px);
      transition:opacity .8s ease-out,transform .8s ease-out;
    }
    
    .reveal.visible{
      opacity:1;
      transform:translateY(0);
    }
    
    /* —— CARDS —— */
    .card{
      background: rgba(26, 26, 26, 0.8);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(0, 212, 255, 0.2);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--tech-primary), var(--tech-accent));
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .card:hover::before {
      opacity: 1;
    }
    
    .card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 212, 255, 0.15);
      border-color: var(--tech-primary);
      background: rgba(26, 26, 26, 0.95);
    }
    
    @media (min-width: 768px) {
      .card {
        padding: 2.5rem;
      }
    }
    
    .card h3{
      font-weight: 700;
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      color: var(--tech-primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
    }
    
    .card h3::after {
      content: '→';
      font-size: 1rem;
      color: var(--tech-accent);
      opacity: 0;
      transform: translateX(-10px);
      transition: all 0.3s ease;
    }
    
    .card:hover h3::after {
      opacity: 1;
      transform: translateX(0);
    }
    
    .card p {
      color: #cccccc;
      line-height: 1.6;
    }
    
    /* —— DIVIDER —— */
    .divider{
      background: linear-gradient(90deg, transparent, var(--tech-primary), transparent);
      width: 100%;
      height: 2px;
      margin: 3rem auto;
      border-radius: 1px;
      box-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
    }
    
    /* —— LAYOUT —— */
    .flex { display: flex; }
    .flex-col { flex-direction: column; }
    .min-h-screen { min-height: 100vh; }
    .flex-grow { flex: 1; }
    .items-center { align-items: center; }
    .justify-center { justify-content: center; }
    .justify-between { justify-content: space-between; }
    .text-center { text-align: center; }
    .w-full { width: 100%; }
    .px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
    .py-4 { padding-top: 1rem; padding-bottom: 1rem; }
    .py-10 { padding-top: 2.5rem; padding-bottom: 2.5rem; }
    .py-24 { padding-top: 6rem; padding-bottom: 6rem; }
    .mb-6 { margin-bottom: 1.5rem; }
    .mb-14 { margin-bottom: 3.5rem; }
    .gap-6 { gap: 1.5rem; }
    .gap-10 { gap: 2.5rem; }
    .gap-12 { gap: 3rem; }
    .max-w-6xl { max-width: 72rem; }
    .mx-auto { margin-left: auto; margin-right: auto; }
    .grid { display: grid; }
    .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
    .text-2xl { font-size: 1.5rem; }
    .text-3xl { font-size: 1.875rem; }
    .text-4xl { font-size: 2.25rem; }
    .text-sm { font-size: 0.875rem; }
    .font-bold { font-weight: 700; }
    
    @media (min-width: 640px) {
      .sm\\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }
    
    @media (min-width: 768px) {
      .md\\:gap-12 { gap: 3rem; }
      .md\\:text-4xl { font-size: 2.25rem; }
    }
    
    @media (min-width: 1024px) {
      .lg\\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
    }
  </style>
</head>

