---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="max-w-3xl mx-auto py-20">
    <h2 class="text-3xl font-bold text-center mb-6">Resume</h2>

    <!-- Direct download and open link -->
    <div class="text-center mb-8">
      <a 
        href="https://mathiolucas-8mdfee1i4-mathiolucas-projects.vercel.app/lucaMMathioResume.pdf" 
        download
        target="_blank"
        rel="noopener noreferrer"
        class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 inline-block"
      >
        Download PDF
      </a>
    </div>

    <!-- Embedded PDF preview -->
    <div class="border p-4">
      <iframe
        src="https://mathiolucas-8mdfee1i4-mathiolucas-projects.vercel.app/lucaMMathioResume.pdf"
        width="100%"
        height="800"
        style="border: 1px solid #ddd;"
        onload="this.style.display='block'; document.getElementById('pdf-error').style.display='none';"
        onerror="this.style.display='none'; document.getElementById('pdf-error').style.display='block';"
      ></iframe>

      <div id="pdf-error" style="display:none;" class="p-4 bg-red-50 text-red-800 rounded">
        <p class="font-bold">Unable to display the PDF directly.</p>
        <p>
          Please use the download button above or 
          <a 
            href="https://mathiolucas-8mdfee1i4-mathiolucas-projects.vercel.app/lucaMMathioResume.pdf" 
            target="_blank" 
            class="text-blue-600 underline"
          >
            open in a new tab
          </a>.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
