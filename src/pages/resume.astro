---

<section class="max-w-3xl mx-auto py-20">
  <h2 class="text-3xl font-bold text-center mb-6">Resume</h2>

  <!-- Direct download link -->
  <div class="text-center mb-8">
    <a 
      href="/LucaMMathioResume.pdf" 
      download
      class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 inline-block"
    >
      Download PDF
    </a>
  </div>

  <!-- Fallback iframe with JS error handling -->
  <div class="border p-4">
    <iframe
      id="pdf-frame"
      src="/LucaMMathioResume.pdf"
      width="100%"
      height="800"
      style="border: 1px solid #ddd; display: none;"
    ></iframe>

    <div 
      id="pdf-error" 
      class="p-4 bg-red-50 text-red-800 rounded"
      style="display: none;"
    >
      <p class="font-bold">Unable to display the PDF directly.</p>
      <p>
        Please use the download button above or 
        <a 
          href="/LucaMMathioResume.pdf" 
          target="_blank" 
          class="text-blue-600 underline"
        >open in a new tab</a>.
      </p>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const iframe = document.getElementById("pdf-frame");
    const error = document.getElementById("pdf-error");

    iframe.onload = () => {
      iframe.style.display = "block";
      error.style.display = "none";
    };
    
    iframe.onerror = () => {
      iframe.style.display = "none";
      error.style.display = "block";
    };
  });
</script>
