---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="relative min-h-screen flex items-center justify-center px-6 py-16">
    <!-- Tech background with animation -->
    <div class="tech-bg absolute inset-0 -z-10"></div>
    
    <!-- Animated particles -->
    <div id="particles-js" class="absolute inset-0 -z-5"></div>

    <!-- Glass card -->
    <div
      class="backdrop-blur-md bg-[#121921]/70 shadow-[0_0_40px_rgba(0,108,255,0.15)] 
             border border-[#2a3544]/50 rounded-3xl px-8 py-12
             max-w-2xl w-full flex flex-col items-center text-center
             transition-all duration-500 hover:shadow-[0_0_60px_rgba(0,108,255,0.25)]"
    >
      <h1 class="text-4xl md:text-5xl font-black text-white mb-4 drop-shadow-sm
                 glitch-text" data-text="Get in touch">
        Get in touch
      </h1>

      <p class="text-lg md:text-xl text-slate-300 mb-8 max-w-md">
        Let's build something amazing together. I'm always open to new
        opportunities, collaborations or just a quick chat.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 w-full sm:justify-center">

        <!-- EMAIL -->
        <a href="mailto:luca.mathio1@gmail.com" class="contact-btn group">
          <svg class="w-6 h-6 shrink-0 transition-colors"
               fill="none" stroke="#00c2ff" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M3 8.5 12 13l9-4.5M4 6h16a2 2 0 0 1 2 2v8a2
                     2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"/>
          </svg>
          <span>Email</span>
        </a>

        <!-- PHONE -->
        <a href="tel:+12262603888" class="contact-btn group">
          <svg class="w-6 h-6 shrink-0 transition-colors"
               fill="none" stroke="#00c2ff" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M2 3.5 6 2l2 5-3 1.5a16 16 0 0 0 7.5 7.5L14 12l5 2-1.5 4
                     a2 2 0 0 1-2 1.3A18.2 18.2 0 0 1 2.7 5.5 2 2 0 0 1 2 3.5Z"/>
          </svg>
          <span>+1&nbsp;(226)&nbsp;260-3888</span>
        </a>

        <!-- LINKEDIN -->
        <a href="https://www.linkedin.com/in/mathio-luca-3aa258290/"
           target="_blank" rel="noopener noreferrer"
           class="contact-btn group">
          <svg class="w-6 h-6 shrink-0 transition-colors"
               viewBox="0 0 24 24" fill="#00c2ff">
            <path d="M4.98 3.5C4.98 4.6 4.09 5.5 2.98 5.5S1 4.6 1 3.5
                     1.9 1.5 2.98 1.5 4.98 2.4 4.98 3.5ZM.5 8h5v14h-5V8Zm7 0h4.8v2h.1
                     c.67-1.3 2.3-2.7 4.75-2.7C22 7.3 23 9.4 23 13v9H18v-8.1c0-1.9-.04-4.3-2.63-4.3-2.64
                     0-3.04 2.06-3.04 4.2V22h-5V8Z"/>
          </svg>
          <span>LinkedIn</span>
        </a>

        <!-- GITHUB -->
        <a href="https://github.com/MathioLucas"
           target="_blank" rel="noopener noreferrer"
           class="contact-btn group">
          <svg class="w-6 h-6 shrink-0 transition-colors"
               viewBox="0 0 24 24" fill="#00c2ff">
            <path d="M12 0C5.37 0 0 5.38 0 12a12 12 0 0 0 8.21 11.44c.6.11.82-.26.82-.58
                     0-.29-.01-1.05-.02-2.07-3.34.73-4.04-1.61-4.04-1.61-.55-1.4-1.34-1.77-1.34-1.77
                     -1.09-.74.08-.73.08-.73 1.21.09 1.85 1.25 1.85 1.25 1.07 1.85 2.8 1.32 3.49 1
                     .11-.78.42-1.32.76-1.63-2.66-.3-5.47-1.34-5.47-5.95
                     0-1.31.47-2.38 1.24-3.22-.12-.3-.54-1.52.12-3.16 0 0 1.01-.32 3.3 1.23a11.4
                     11.4 0 0 1 6 0c2.28-1.55 3.29-1.23 3.29-1.23 .66 1.64.24 2.86.12 3.16
                     .77.84 1.24 1.91 1.24 3.22 0 4.62-2.81 5.64-5.49 5.94.43.37.81 1.1.81 2.22
                     0 1.6-.02 2.88-.02 3.27 0 .32.22.69.83.57A12 12 0 0 0 24 12c0-6.62-5.38-12-12-12z"/>
          </svg>
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
/* Tech background */
.tech-bg {
  background-color: #0a0f16;
  background-image: 
    radial-gradient(circle at 25% 25%, rgba(0, 108, 255, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(0, 194, 255, 0.05) 0%, transparent 50%),
    linear-gradient(90deg, rgba(1, 16, 28, 0.9) 0%, rgba(2, 13, 23, 0.9) 100%);
  position: relative;
  overflow: hidden;
}

.tech-bg::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  width: 200%;
  height: 200%;
  background: repeating-linear-gradient(transparent, transparent 2px, rgba(0, 108, 255, 0.03) 2px, rgba(0, 108, 255, 0.03) 4px);
  animation: bgMove 120s linear infinite;
  transform: rotate(45deg);
}

