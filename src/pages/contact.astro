---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="relative min-h-screen flex items-center justify-center px-6 py-16">
    <!-- Painted background -->
    <div class="painting-bg absolute inset-0 -z-10"></div>

    <!-- Glass card -->
