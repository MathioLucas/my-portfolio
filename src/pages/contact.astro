---
// src/pages/contact.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<style is:global>
/* Re-use the animated gradient idea,
   but tweak colors so each page feels unique */
.contact-bg {
  position: absolute;
  inset: 0;
  z-index: -1;
  background: linear-gradient(140deg,#f59e0b,#ec4899,#6366f1,#0ea5e9);
  background-size: 400% 400%;
  animation: contactShift 18s ease-in-out infinite;
  filter: blur(120px);
}
@keyframes contactShift {
  0%,100% {background-position: 0% 50%;}
  50%     {background-position: 100% 50%;}
}

/* Shared style for buttons */
.contact-btn {
  @apply inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold
         shadow-md transition-colors duration-300
         backdrop-blur-sm bg-white/10 border border-white/20 text-white;
}
.contact-btn:hover { @apply bg-white/20; }

/* Optional: make SVG icons inherit currentColor */
.contact-btn svg { width: 1.25rem; height: 1.25rem; fill: currentColor; }
</style>

<BaseLayout>
  <div class="relative overflow-hidden">
    <div class="contact-bg"></div>

    <section class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center text-white">
      <h1 class="text-4xl sm:text-5xl font-extrabold mb-6">
        Let’s Build&nbsp;Something&nbsp;Amazing
      </h1>

      <p class="text-lg sm:text-xl max-w-2xl mx-auto mb-14 opacity-90">
        Got an idea, role, or collaboration in mind? Reach out on your favourite
        channel — I’ll reply within&nbsp;24&nbsp;hours.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-6">

        <!-- 1) Email -->
        <a href="mailto:luca.mathio1@gmail.com" class="contact-btn">
          <!-- envelope icon (Heroicons outline) -->
          <svg viewBox="0 0 24 24"><path stroke="currentColor" stroke-width="2"
            d="M3 8.5 12 13l9-4.5M4 6h16a2 2 0 0 1 2 2v8a2
               2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"
            fill="none" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Email Me
        </a>

        <!-- 2) Phone -->
        <a href="tel:+12262603888" class="contact-btn">
          <!-- phone icon -->
          <svg viewBox="0 0 24 24"><path stroke="currentColor" stroke-width="2"
            d="M2 3.5 6 2l2 5-3 1.5a16 16 0 0 0 7.5 7.5L14 12l5 2-1.5 4
               a2 2 0 0 1-2 1.3A18.2 18.2 0 0 1 2.7 5.5 2 2 0 0 1 2 3.5Z"
            fill="none" stroke-linecap="round" stroke-linejoin="round"/></svg>
          +1&nbsp;(226)&nbsp;260-3888
        </a>

        <!-- 3) LinkedIn -->
        <a href="https://www.linkedin.com/in/mathio-luca-3aa258290/"
           target="_blank" rel="noopener noreferrer" class="contact-btn">
          <!-- simple LinkedIn glyph -->
          <svg viewBox="0 0 24 24"><path fill="currentColor"
            d="M4.98 3.5C4.98 4.6 4.09 5.5 2.98 5.5S1 4.6 1 3.5
               1.9 1.5 2.98 1.5 4.98 2.4 4.98 3.5ZM.5 8h5v14h-5V8Zm7 0h4.8v2h.1
               c.67-1.3 2.3-2.7 4.75-2.7C22 7.3 23 9.4 23 13v9H18v-8.1c0-1.9-.04-4.3-2.63-4.3-2.64
               0-3.04 2.06-3.04 4.2V22h-5V8Z"/></svg>
          LinkedIn
        </a>

      </div>
    </section>
  </div>
</BaseLayout>
