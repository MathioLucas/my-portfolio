---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="relative min-h-screen flex flex-col items-center justify-center text-center px-6">
    <div class="painting-bg"></div>

    <h1 class="text-4xl md:text-5xl font-black mb-10 text-[#3c2f13]">
      Contact
    </h1>

    <p class="max-w-xl text-lg md:text-xl mb-12">
      Feel free to reach out for opportunities or questions.
    </p>

    <div class="flex flex-col sm:flex-row gap-6">
      <a href="mailto:luca.mathio1@gmail.com" class="contact-btn">
        <!-- mail icon -->
        <svg viewBox="0 0 24 24"><path stroke="#c19e57" stroke-width="2"
          d="M3 8.5 12 13l9-4.5M4 6h16a2 2 0 0 1 2 2v8a2
          2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"
          fill="none" stroke-linecap="round" stroke-linejoin="round"/></svg>
        Email
      </a>

      <a href="tel:+12262603888" class="contact-btn">
        <!-- phone icon -->
        <svg viewBox="0 0 24 24"><path stroke="#c19e57" stroke-width="2"
          d="M2 3.5 6 2l2 5-3 1.5a16 16 0 0 0 7.5 7.5L14 12l5 2-1.5 4
             a2 2 0 0 1-2 1.3A18.2 18.2 0 0 1 2.7 5.5 2 2 0 0 1 2 3.5Z"
          fill="none" stroke-linecap="round" stroke-linejoin="round"/></svg>
        +1&nbsp;(226)&nbsp;260-3888
      </a>

      <a href="https://www.linkedin.com/in/mathio-luca-3aa258290/"
         target="_blank" rel="noopener noreferrer" class="contact-btn">
        <!-- Linked-In icon -->
        <svg viewBox="0 0 24 24"><path fill="#c19e57"
          d="M4.98 3.5C4.98 4.6 4.09 5.5 2.98 5.5S1 4.6 1 3.5
             1.9 1.5 2.98 1.5 4.98 2.4 4.98 3.5ZM.5 8h5v14h-5V8Zm7 0h4.8v2h.1
             c.67-1.3 2.3-2.7 4.75-2.7C22 7.3 23 9.4 23 13v9H18v-8.1c0-1.9-.04-4.3-2.63-4.3-2.64
             0-3.04 2.06-3.04 4.2V22h-5V8Z"/></svg>
        LinkedIn
      </a>
    </div>
  </section>
</BaseLayout>
