      </div>
    </div>
  </section>
</BaseLayout>

<style>
/* Background texture */
.painting-bg{
  background-image:url('/path/to/your/painting-texture.jpg');
  background-size:cover;
  background-position:center;
  filter:brightness(.95);
}

/* Shared button styles */
.contact-btn{
  @apply relative flex items-center justify-center gap-3
         px-6 py-4 rounded-full bg-white/60 text-[#3c2f13]
         font-semibold shadow-lg backdrop-blur-md
         transition-all duration-150;
}
.contact-btn:hover{
  @apply -translate-y-1 shadow-2xl;
  box-shadow:0 8px 20px rgba(0,0,0,.15);
}
.contact-btn:hover svg{
  stroke:#3c2f13;
  fill:#3c2f13;
}
/* Gold halo on hover */
.contact-btn::after{
  content:"";
  position:absolute;
  inset:0;
  border-radius:9999px;
  padding:1px;
  background:linear-gradient(135deg,#c19e57 0%,#d5b16d 100%);
  -webkit-mask:linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
  -webkit-mask-composite:xor;
          mask-composite:exclude;
  opacity:0;
  transition:opacity .2s;
}
.contact-btn:hover::after{opacity:1;}
</style>
