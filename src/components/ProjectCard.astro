---
export interface Props {
  title: string;
  description: string;
  tech: string[];
  link?: string;
}
const { title, description, tech, link } = Astro.props;
---
<article class="border rounded p-4 hover:shadow transition">
  <h3 class="text-lg font-semibold">{title}</h3>
  <p class="mt-2 text-sm">{description}</p>
  <p class="mt-2 text-xs text-gray-500">Tech: {tech.join(", ")}</p>
  {link && <a href={link} class="inline-block mt-3 text-blue-600 underline" target="_blank">View</a>}
</article>
