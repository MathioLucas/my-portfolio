---
/* Props: title – project name description – one-liner demo – live demo URL repo – GitHub URL screenshot – local / remote image */
interface Props {
  title: string;
  description: string;
  demo: string;
  repo?: string;
  screenshot?: string;
}

const { title, description, demo, repo, screenshot } = Astro.props;
const preview = screenshot ?? `https://image.thum.io/get/width/900/crop/675/noanimate/${encodeURIComponent(
  demo
)}`;
---

<a 
  href={demo} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="group relative block aspect-video overflow-hidden rounded-xl ring-1 ring-white/10 shadow-xl transition hover:ring-[#c19e57]/60"
>
  <!-- Static thumbnail -->
  <img 
    src={preview} 
    alt={`${title} preview`} 
    loading="lazy" 
    class="absolute inset-0 h-full w-full object-cover object-top transition-transform duration-300 group-hover:scale-105 group-hover:blur-[2px]" 
  />
  
  <!-- Hover overlay -->
  <div 
    class="absolute inset-0 z-10 flex flex-col justify-between bg-black/70 p-4 opacity-0 transition-opacity duration-300 group-hover:opacity-100 pointer-events-none"
  >
    <!-- GitHub button container -->
    <div class="flex justify-end">
      {repo && (
        <a 
          href={repo} 
          target="_blank" 
          rel="noopener noreferrer" 
          class="pointer-events-auto inline-flex items-center justify-center rounded-full bg-white/20 p-2 transition hover:bg-white/30 backdrop-blur-sm"
          onclick="event.stopPropagation()"
        >
          <!-- GitHub icon -->
          <svg class="h-5 w-5 text-[#c19e57]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 .3A12 12 0 0 0 0 12a12 12 0 0 0 8.21 11.44c.6.12.82-.25.82-.57 0-.28-.01-1.04-.02-2.05-3.34.72-4.05-1.6-4.05-1.6-.55-1.4-1.35-1.77-1.35-1.77-1.1-.75.08-.74.08-.74 1.2.08 1.85 1.24 1.85 1.24 1.07 1.85 2.81 1.32 3.49 1 .11-.78.42-1.31.76-1.62-2.66-.31-5.47-1.35-5.47-5.95 0-1.3.47-2.37 1.24-3.22-.13-.3-.54-1.52.12-3.15 0 0 1-.33 3.3 1.23a11.4 11.4 0 0 1 6 0c2.3-1.56 3.3-1.23 3.3-1.23.66 1.63.25 2.85.12 3.15.77.85 1.24 1.92 1.24 3.22 0 4.61-2.8 5.64-5.49 5.94.43.36.82 1.1.82 2.22 0 1.6-.02 2.88-.02 3.27 0 .32.22.69.83.57A12 12 0 0 0 24 12 12 12 0 0 0 12 .3Z"/>
          </svg>
        </a>
      )}
    </div>
    
    <!-- Title + description -->
    <div class="pointer-events-none space-y-1">
      <h3 class="text-lg font-bold text-white drop-shadow-lg">{title}</h3>
      <p class="text-sm text-white/90 drop-shadow-lg">{description}</p>
    </div>
  </div>
</a>
