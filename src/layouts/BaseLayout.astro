---

const {
  title        = "Mathio Luca | Portfolio",
  description  = "Personal portfolio✨",
  ogImage,
  backHref     = "/",
} = Astro.props;

const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    {ogImage && (
      <>
        <meta property="og:image" content={ogImage} />
        <meta name="twitter:card" content="summary_large_image" />
      </>
    )}

    <!-- Example web-font (optional) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>

  <body class="bg-[#0d0d0d] text-gray-100 flex flex-col min-h-screen">

    <!-- Back / Home button -->
    <a
      href={backHref}
      class="fixed top-4 left-4 z-50 flex items-center gap-1 rounded-full bg-white/5 px-3 py-1.5 text-sm text-gray-300 backdrop-blur transition hover:text-[#c19e57] hover:bg-white/10"
    >
      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 0 1-1.414 0l-5-5a1 1 0 0 1 0-1.414l5-5A1 1 0 0 1 7.707 4.293L4.414 7.586H18a1 1 0 1 1 0 2H4.414l3.293 3.293a1 1 0 0 1 0 1.414z" clip-rule="evenodd"/>
      </svg>
      Home
    </a>

    <!-- Main content -->
    <main class="flex-grow container mx-auto px-4 py-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-12 border-t border-white/10 py-8 text-center text-sm text-white/60 backdrop-blur">
      © {year} <span class="text-[#c19e57] font-semibold">Your&nbsp;Name</span>
    </footer>
  </body>
</html>
