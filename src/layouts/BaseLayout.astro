---
/* --------------------------------------------------------------------
   Base-layout: provides <head>, palette, sticky navbar, footer, etc.
------------------------------------------------------------------------ */
import Navbar from '../components/Navbar.astro';

const {
  title       = "Mathio Luca | Portfolio",
  description = "Personal portfolio ✨",
  ogImage,
} = Astro.props;

const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    {ogImage && (
      <>
        <meta property="og:image" content={ogImage} />
        <meta name="twitter:card" content="summary_large_image" />
      </>
    )}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- Root-level colour variables so Navbar (and anything else) can use them -->
    <style is:global>
      :root{
        --gold:#c19e57;
        --ink:#3c2f13;
        --parch:#f4efe9;
      }
    </style>
  </head>

  <body class="bg-[#0d0d0d] text-gray-100 flex flex-col min-h-screen">
    <!-- Sticky translucent navbar -->
    <Navbar />

    <!-- Main page content -->
    <main class="flex-grow container mx-auto px-4 pt-20 pb-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/10 py-8 text-center text-sm text-white/60 backdrop-blur">
      © {year} <span class="text-[var(--gold)] font-semibold">Mathio&nbsp;Luca</span>
    </footer>
  </body>
</html>
